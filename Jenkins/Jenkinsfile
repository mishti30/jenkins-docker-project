pipeline {
    agent {
        label 'agent1'
    }
    
    stages {
        stage('scm checkout') {
            steps {
              git url:"https://github.com/mishti30/jenkins-docker-project.git", branch: "main"
            }
        }

        stage('create Image') {
            steps {
                sh "docker build -t jenkinsapp:latest ."
            }
        }

        stage('Image push to Repo '){
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-repo-creds', usernameVariable: 'docker_user', passwordVariable: 'docker_pass')]) {
                sh "docker tag jenkinsapp ${env.docker_user}/jenkinsapp:latest"
                sh "docker login -u ${env.docker_user} -p ${env.docker_pass}"
                sh "docker push ${env.docker_user}/jenkinsapp:latest"
                }
            }
        }
        
    }
    
}